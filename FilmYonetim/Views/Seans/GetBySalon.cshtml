@model IEnumerable<FilmYonetim.Domain.Entities.Salon>
@{
    ViewData["Title"] = "Salona Göre Filtreleme";
    Layout = "_Layout";
}
<div class="m-5">
    <blockquote class="blockquote">
        <p class="mb-3">Salonlara Göre Filtreleme</p>
        <footer class="blockquote-footer"><cite title="Source Title">Seçilen salonda gösterime girmiş filmleri listeler</cite></footer>
    </blockquote>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <a class="btn btn-outline-secondary mb-2 text-dark list-unstyled" asp-controller="Seans" asp-action="GetBySalon" asp-route-id="@item.Id" type="submit">@item.SalonAd</a>
            </li>
        }
    </ul>

    <table id="datatablesSimple">
        <thead>
            <tr>
                <th>
                    Salon Adi
                </th>
                <th>
                    Gösterim Yılı
                </th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Seanslar != null)
            {
                @foreach (var seans in ViewBag.Seanslar)
                {
                    <tr>
                        <td>
                            @seans.Film.FilmAd
                        </td>
                        <td>
                            @seans.Film.FilmYapimYil
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>
